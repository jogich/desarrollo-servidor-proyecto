{% block body %}
    <div class="container">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th id="user-list-header">#</th>
                <th id="user-list-header">Nombre</th>
                <th id="user-list-header">Apellidos</th>
                <th id="user-list-header">Nombre de usuario</th>
