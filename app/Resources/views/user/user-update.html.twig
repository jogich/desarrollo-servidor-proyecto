{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="wrap">
            {{ form_start(form_update_user) }}
            <div class="text-center" id="regiser-form">
                <div class="form-group row">
                    {{ form_label(form_update_user.name, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_update_user.name, {'attr':{'class':'form-control' }}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form_update_user.surname, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_update_user.surname, {'attr':{'class':'form-control' }}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form_update_user.username, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_update_user.username, {'attr':{'class':'form-control' }}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form_update_user.email, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_update_user.email, {'attr':{'class':'form-control' }}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form_update_user.plainPassword.first, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_update_user.plainPassword.first, {'attr':{'class':'form-control' }}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form_update_user.plainPassword.second, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_update_user.plainPassword.second, {'attr':{'class':'form-control' }}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        {{ form_widget(form_update_user.Registrarse, {'attr': {'class': 'btn btn-success' }}) }}
                    </div>
                </div>
            </div>
            {{ form_end(form_update_user) }}
        </div>
    </div>
{% endblock %}