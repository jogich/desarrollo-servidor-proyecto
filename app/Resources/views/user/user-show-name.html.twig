{% extends 'base.html.twig'%}
{% block body %}
    <div class="container">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th id="user-list-header">#</th>
                <th id="user-list-header">Nombre</th>
                <th id="user-list-header">Apellidos</th>
                <th id="user-list-header">Modificar</th>
            </tr>
            </thead>
            <tbody>
            {% for users in user  %}
            <tr>
                <td id="user-list-body">{{ users.id }}</td>
                <td id="user-list-body">{{ users.name }}</td>
                <td id="user-list-body">{{ users.surname }}</td>
                <td id="user-list-body"><a class="btn btn-success" href="{{ path('user-show-one-id', { 'id': users.id }) }}">Ver</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}