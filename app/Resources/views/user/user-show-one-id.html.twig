{% extends 'base.html.twig'%}
{% block body %}
    <div class="container">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th id="user-list-header">#</th>
                <th id="user-list-header">Nombre</th>
                <th id="user-list-header">Apellidos</th>
                <th id="user-list-header">Email</th>
                <th id="user-list-header">Password</th>
                
            </tr>
            </thead>
            <tbody>
            {% for users in user  %}
            <tr>
                <td id="user-list-body">{{ users.id }}</td>
                <td id="user-list-body">{{ users.name }}</td>
                <td id="user-list-body">{{ users.surname }}</td>
                <td id="user-list-body">{{ users.email }}</td>
                <td id="user-list-body">{{ users.password }}</td>
                
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}